# Environment Variables Template

# OPTIONAL - Contact Form Feature Flag
# Set to 'true' to enable the contact form in the Contact section
# When false or unset, visitors see email and LinkedIn instead
NEXT_PUBLIC_ENABLE_CONTACT_FORM=false

# REQUIRED if NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
# SMTP Configuration for contact form email delivery
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
CONTACT_RECIPIENT=

# Example values (for reference only - do not use in production)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=SG.your-sendgrid-api-key
# CONTACT_RECIPIENT=your-email@example.com
